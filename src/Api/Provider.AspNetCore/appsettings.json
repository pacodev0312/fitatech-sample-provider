{
  "logging": {
    "logLevel": {
      "default": "Information",
      "system": "Information",
      "microsoft": "Information"
    },
    "console": {
      "formatterName": "json",
      "formatterOptions": {
        "singleLine": true,
        "includeScopes": true,
        "timestampFormat": "yyyy-MM-dd HH:mm:ss.fff",
        "useUtcTimestamp": true,
        "jsonWriterOptions": {
          "indented": false
        }
      }
    }
  },
  "allowedHosts": "*",
  "swagger": {
    "enabled": true,
    "title": "Sample Data Provider API",
    "description": "Provides API to get data from sample data provider.",
    "routePrefix": "swagger"
  },
  "authentication": {
    "authority": "https://localhost:8443/identity/realms/fintatech",
    "audience": "sample"
  },
  "connectionStrings": {
    "redis": "localhost:6379,password=redis"
  },
  "service": {
    "name": "data-providers/sample-provider"
  },
  "jaeger": {
    "enabled": false,
    "agentHost": "localhost",
    "agentPort": 6831
  },
  "kafka": {
    "servers": [
      "127.0.0.1:9094"
    ],
    "saslMechanism": "Plain",
    "username": "user",
    "password": "user",
    "securityProtocol": "SaslPlaintext"
  },
  "messaging": {
    "consumers": {
      "consumer-trigger": {
        "topic": "consumers.triggers",
        "count": 1,
        "groupIdKind": "serviceSession"
      },
      "enumerate-instruments": {
        "topic": "data-providers.enumerate-instruments",
        "autoOffsetReset": "latest"
      },
      "enumerate-services": {
        "topic": "services.enumerate",
        "groupIdKind": "serviceSession",
        "autoOffsetReset": "latest",
        "autoDeleteGroup": true
      },
      "subscriptions-l1": {
        "topic": "data-providers.level1-subscriptions"
      }
    },
    "publishers": {
      "consumer-trigger": {
        "topic": "consumers.triggers"
      },
      "dead-letter": {
        "topic": "dead-letter",
        "messageMaxBytes": 2097152
      },
      "health-check": {
        "topic": "health-check"
      },
      "instruments": {
        "topic": "data-providers.instruments"
      },
      "l1-updates": {
        "topic": "data-providers.level1"
      },
      "service-sessions": {
        "topic": "services.sessions"
      }
    },
    "rpc": {
      "timeout": "00:01:00",
      "operations": {
        "isDataProviderAlive": {
          "request": {
            "topic": "rpc-data-providers.is-alive.request",
            "consumer": {
              "count": 1
            }
          },
          "response": {
            "topic": "rpc-data-providers.is-alive.response"
          }
        },
        "instrumentById": {
          "request": {
            "topic": "rpc-instruments.instrument-by-id.request"
          },
          "response": {
            "topic": "rpc-instruments.instrument-by-id.response"
          }
        },
        "findInstrument": {
          "request": {
            "topic": "rpc-instruments.find-instrument.request"
          },
          "response": {
            "topic": "rpc-instruments.find-instrument.response"
          }
        },
        "isServiceAlive": {
          "request": {
            "topic": "rpc-services.is-alive.request",
            "consumer": {
              "count": 1
            }
          },
          "response": {
            "topic": "rpc-services.is-alive.response"
          }
        },
        "providerBars": {
          "request": {
            "topic": "rpc-data-providers.bars.request",
            "consumer": {
              "count": 10
            }
          },
          "response": {
            "topic": "rpc-data-providers.bars.response",
            "publisher": {
              "messageMaxBytes": 5242880
            }
          }
        },
        "providerLevel1Snapshot": {
          "request": {
            "topic": "rpc-data-providers.level1-snapshot.request",
            "consumer": {
              "count": 5
            }
          },
          "response": {
            "topic": "rpc-data-providers.level1-snapshot.response"
          }
        },
        "supportedTimeFrame": {
          "request": {
            "topic": "rpc-data-providers.supported-time-frame.request",
            "consumer": {
              "count": 1
            }
          },
          "response": {
            "topic": "rpc-data-providers.supported-time-frame.response"
          }
        },
        "supportedBarsRequests": {
          "request": {
            "topic": "rpc-data-providers.supported-bars-request.request",
            "consumer": {
              "count": 1
            }
          },
          "response": {
            "topic": "rpc-data-providers.supported-bars-request.response"
          }
        }
      }
    }
  }
}